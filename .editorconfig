root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
quote_type = single
indent_brace_style = K&R

[*.{json,js,jsx,html,css}]
indent_style = space
indent_size = 2
spaces_around_brackets = inside

[.eslintrc]
indent_style = space
indent_size = 2

[.prettierrc]
indent_style = space
indent_size = 2
quote_type = single

[*.md]
trim_trailing_whitespace = false
